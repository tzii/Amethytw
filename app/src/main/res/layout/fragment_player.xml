<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playerBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/slidingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Multi-stream container with ConstraintLayout for animated transitions -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/multiStreamContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Primary player layout -->
            <com.github.andreyasadchy.xtra.ui.view.PlayerLayout
                android:id="@+id/playerLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.media3.ui.AspectRatioFrameLayout
                    android:id="@+id/aspectRatioFrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <SurfaceView
                        android:id="@+id/playerSurface"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </androidx.media3.ui.AspectRatioFrameLayout>

                <androidx.media3.ui.SubtitleView
                    android:id="@+id/subtitleView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/bufferingIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:visibility="gone" />

                <!-- Audio indicator for primary stream -->
                <FrameLayout
                    android:id="@+id/primaryAudioIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_audio_indicator"
                    android:padding="6dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/baseline_volume_up_black_24"
                        app:tint="@android:color/white"
                        android:contentDescription="@string/audio_active" />

                </FrameLayout>

                <include
                    android:id="@+id/gestureFeedback"
                    layout="@layout/player_volume"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />
                <include
                    android:id="@+id/playerControls"
                    layout="@layout/player_layout" />

                <View
                    android:id="@+id/dragView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.github.andreyasadchy.xtra.ui.view.PlayerLayout>

            <!-- Secondary player layout (for multi-stream) - hidden by default -->
            <FrameLayout
                android:id="@+id/secondaryPlayerContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/black"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

                <androidx.media3.ui.AspectRatioFrameLayout
                    android:id="@+id/secondaryAspectRatioFrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <SurfaceView
                        android:id="@+id/secondaryPlayerSurface"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </androidx.media3.ui.AspectRatioFrameLayout>

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/secondaryBufferingIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:visibility="gone" />

                <!-- Audio indicator for secondary stream -->
                <FrameLayout
                    android:id="@+id/secondaryAudioIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_audio_indicator"
                    android:padding="6dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/baseline_volume_up_black_24"
                        app:tint="@android:color/white"
                        android:contentDescription="@string/audio_active" />

                </FrameLayout>

                <!-- Stream info overlay for secondary stream -->
                <LinearLayout
                    android:id="@+id/secondaryStreamInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_stream_info_overlay"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/secondaryChannelName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        tools:text="Secondary Stream" />

                </LinearLayout>

                <!-- Touch overlay for secondary stream interactions -->
                <View
                    android:id="@+id/secondaryDragView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Close button for secondary stream (PiP mode) -->
                <ImageButton
                    android:id="@+id/secondaryCloseButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:background="@drawable/bg_audio_indicator"
                    android:padding="4dp"
                    android:src="@drawable/baseline_close_black_36"
                    android:visibility="gone"
                    app:tint="@android:color/white"
                    android:contentDescription="@string/multi_stream_remove"
                    tools:visibility="visible" />

            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.github.andreyasadchy.xtra.ui.view.ChatLayout
            android:id="@+id/chatLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?android:colorBackground">

            <LinearLayout
                android:id="@+id/chatLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/chatFragmentContainer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/watchVideo"
                    style="?attr/elevatedButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:text="@string/watch_video"
                    android:textAllCaps="true"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:id="@+id/chatTouchView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.github.andreyasadchy.xtra.ui.view.ChatLayout>

    </FrameLayout>
    <RelativeLayout
        android:id="@+id/floating_chat_root"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:visibility="gone"
        android:elevation="10dp"
        tools:visibility="visible">

        <FrameLayout
            android:id="@+id/floating_chat_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:layout_above="@+id/drag_handle_zone" />

        <LinearLayout
            android:id="@+id/drag_handle_zone"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="#CC000000"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_drag_handle"
                android:contentDescription="@string/floating_chat_drag"
                app:tint="#FFFFFF" />
            
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/highVisibilityToggle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:src="@drawable/ic_contrast"
                android:contentDescription="@string/floating_chat_high_visibility"
                app:tint="#FFFFFF" />

            <ImageView
                android:id="@+id/resize_handle_zone"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:src="@drawable/ic_resize_handle"
                android:contentDescription="@string/floating_chat_resize"
                app:tint="#FFFFFF" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
